@layer base {
	* {
		@apply border-border;
	}
	html {
		@apply scroll-smooth;
	}
	body {
		@apply flex min-h-screen w-screen flex-col overflow-x-clip bg-background bg-gradient-to-br from-primary/10 text-foreground;
		& > div:first-of-type {
			@apply contents;
		}
		& main {
			@apply mb-24 overflow-x-clip;
		}
	}

	figure {
		&:has(+ .block-wrapper) {
			@apply mb-4;
		}
	}
	section figure {
		@apply rounded;
	}

	section.layout-full:not([data-template='inherit-main']) > figure {
		@apply rounded-none;
	}
}
